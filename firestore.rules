rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read any profile, but only update their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Activities collection - users can read activities, create their own, and update likes
    match /activities/{activityId} {
      // Anyone authenticated can read activities
      allow read: if request.auth != null;
      
      // Users can create their own activities
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own activities fully
      allow update: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      
      // Users can delete their own activities
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
    
    // Likes collection - users can read all likes, but only create/delete their own
    match /likes/{likeId} {
      allow read: if request.auth != null;
      // Allow create - user must be creating their own like
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.activityId is string;
      // Allow update - user can update their own like (in case setData is used)
      allow update: if request.auth != null 
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == request.auth.uid;
      // Allow delete - user can delete their own like
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
    
    // Follows collection - users can read and manage their own follows
    match /follows/{followId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
        && request.resource.data.followerId == request.auth.uid;
      allow update: if request.auth != null 
        && resource.data.followerId == request.auth.uid;
      allow delete: if request.auth != null 
        && resource.data.followerId == request.auth.uid;
    }
    
    // User subcollections (trainings, runs, etc.) - users can only access their own
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

